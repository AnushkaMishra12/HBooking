<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.HotelBooking" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey</item>
    </style>

    <style name="Theme.AppBar" parent="ThemeOverlay.Material3.BottomAppBar">
        <item name="android:animateOnClick">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/black</item>
        <item name="elevation">8dp</item>
        <item name="colorPrimaryVariant">@color/black</item>
    </style>
    <style name="BottomNavigationViewTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#1B8BE4</item>
    </style>


    <style name="BottomNavigationViewTextAppearanceActive" parent="BottomNavigationViewTextAppearance">
        <item name="android:textColor">#1B8BE4</item>
    </style>

    <style name="BottomNavigationViewTextAppearanceInactive" parent="BottomNavigationViewTextAppearance">
        <item name="android:textColor">#808080</item>
    </style>
    <style name="Theme.Textview" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#0D47A1</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="elevation">8dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">#605E5E</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="Theme.Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#6E250F</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="elevation">8dp</item>
        <item name="android:textColorHint">#605E5E</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">#AEABAB</item>
        <item name="android:padding">8dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="strokeWidth">1sp</item>
        <item name="rippleColor">@color/black</item>
        <item name="elevation">8dp</item>
        <item name="android:animateOnClick">true</item>
    </style>

    <style name="Theme.HotelBooking" parent="Base.Theme.HotelBooking" />
</resources>